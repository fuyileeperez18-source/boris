# ================================
# CONFIGURACIÓN PARA RENDER
# ================================

# Servidor
PORT=3000
NODE_ENV=production

# Base de datos PostgreSQL (Render provee esta URL)
# Formato: postgresql://usuario:password@host:port/database
DATABASE_URL=postgresql://usuario:password@host:5432/delivery_platform

# JWT
JWT_SECRET=tu_secreto_jwt_muy_seguro_aqui_minimo_32_caracteres
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=tu_secreto_refresh_token_aqui_minimo_32_caracteres
JWT_REFRESH_EXPIRES_IN=30d

# Mercado Pago (Producción)
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# URL del Frontend en Vercel
# Ejemplo: https://tu-app.vercel.app
CLIENT_URL=https://tu-dominio-en-vercel.vercel.app

# URL del API (tu dominio en Render)
# Ejemplo: https://tu-api.onrender.com
API_URL=https://tu-api.onrender.com

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@tudominio.com

# WhatsApp Business API (opcional)
WHATSAPP_API_TOKEN=tu_token_whatsapp
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id
